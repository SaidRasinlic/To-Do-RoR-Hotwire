<%= form_with(model: task, class: "mb-7") do |form| %>
  <div class="flex flex-row flex-wrap mb-5">
    <%= form.text_field :description, placeholder: "Add new Task", class: "min-w-0 w-96 px-3 py-2 mt-2 shadow rounded-md border border-gray-200 outline-none" %>
    <%= form.submit "Save", class: "btn w-24 py-2 ml-2 bg-blue-600 text-white" %>
  </div>
<% end %>
